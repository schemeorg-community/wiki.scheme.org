#! /usr/bin/env gosh

;; Run the wiki as a HTTP server.

(use makiki)
(use makiki.cgi)

(add-load-path "." :relative)  ; To load "wiki-cgi".

(define (main args)
  (start-http-server :access-log #t :error-log #t :port 80)
  0)

(define-http-handler "/"
  (cgi-script "wiki-cgi" :script-name "/" :forwarded #t))

;; If you serve static content via Makiki, add file-handler for them.
(define-http-handler "/wiki.css" (file-handler))

;; Emacs:
;; Local variables:
;; mode: scheme
;; end:
